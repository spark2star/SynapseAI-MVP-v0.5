# Production Environment Configuration for SynapseAI
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
POSTGRES_DB=synapseai_prod
POSTGRES_USER=synapseai_user
POSTGRES_PASSWORD=your_super_secure_postgres_password_here_min_16_chars

# Security Keys (Generate new ones for production!)
SECRET_KEY=your_super_secure_secret_key_here_min_32_chars
JWT_SECRET=your_jwt_secret_key_here_min_32_chars  
ENCRYPTION_KEY=your_encryption_key_here_exactly_32_chars

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Application Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
DEBUG=false
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
