#!/bin/bash
# Deployment script for SynapseAI

set -e

echo "ğŸš€ SynapseAI Production Deployment Script"
echo "========================================"

# Check if .env.prod exists
if [ ! -f .env.prod ]; then
    echo "âŒ ERROR: .env.prod file not found!"
    echo "Please copy .env.prod.example to .env.prod and configure it."
    exit 1
fi

# Check if GCP credentials exist
if [ ! -f gcp-credentials.json ]; then
    echo "âŒ ERROR: gcp-credentials.json not found!"
    echo "Please place your Google Cloud service account credentials file in the root directory."
    exit 1
fi

# Load environment variables
source .env.prod

echo "ğŸ“‹ Pre-deployment checklist:"
echo "âœ… Environment file: .env.prod"
echo "âœ… GCP credentials: gcp-credentials.json"

# Validate required environment variables
required_vars=("POSTGRES_PASSWORD" "SECRET_KEY" "JWT_SECRET" "ENCRYPTION_KEY" "GOOGLE_CLOUD_PROJECT")
for var in "${required_vars[@]}"; do
    if [ -z "${!var}" ]; then
        echo "âŒ ERROR: Required environment variable $var is not set!"
        exit 1
    fi
done

echo "âœ… All required environment variables are set"

# Stop existing containers
echo "ğŸ›‘ Stopping existing containers..."
docker-compose -f docker-compose.prod.yml down || true

# Build and start production containers
echo "ğŸ—ï¸  Building production containers..."
docker-compose -f docker-compose.prod.yml build --no-cache

echo "ğŸš€ Starting production services..."
docker-compose -f docker-compose.prod.yml up -d

# Wait for services to be healthy
echo "â³ Waiting for services to be healthy..."
sleep 30

# Check service health
echo "ğŸ” Checking service health..."
if docker-compose -f docker-compose.prod.yml ps | grep -q "unhealthy"; then
    echo "âŒ Some services are unhealthy! Check logs:"
    docker-compose -f docker-compose.prod.yml logs
    exit 1
fi

echo "âœ… All services are healthy!"

# Display running services
echo "ğŸ“Š Running services:"
docker-compose -f docker-compose.prod.yml ps

echo ""
echo "ğŸ‰ SynapseAI has been deployed successfully!"
echo ""
echo "ğŸŒ Frontend: http://localhost:3000"
echo "ğŸ”— Backend API: http://localhost:8000"
echo "ğŸ“š API Docs: http://localhost:8000/docs"
echo "ğŸ©º Health Check: http://localhost:8000/api/v1/health"
echo ""
echo "ğŸ“ Useful commands:"
echo "  View logs: docker-compose -f docker-compose.prod.yml logs -f"
echo "  Stop services: docker-compose -f docker-compose.prod.yml down"
echo "  Restart: docker-compose -f docker-compose.prod.yml restart"
echo ""
echo "ğŸ”’ Remember to:"
echo "  1. Set up SSL/TLS certificates for production"
echo "  2. Configure your domain DNS to point to this server"
echo "  3. Set up regular database backups"
echo "  4. Monitor logs and performance"
